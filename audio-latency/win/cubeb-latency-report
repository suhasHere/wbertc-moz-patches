@@ -568,6 +570,28 @@ pulse_stream_get_position(cubeb_stream *
   return CUBEB_OK;
 }
 
+int
+pulse_stream_get_latency(cubeb_stream * stm, uint32_t * latency)
+{
+  pa_usec_t r_usec;
+  int negative, r;
+
+  if (!stm) {
+    return CUBEB_ERROR;
+  }
+
+  r = WRAP(pa_stream_get_latency)(stm->stream, &r_usec, &negative);
+
+  assert(!negative);
+
+  if (r) {
+    return CUBEB_ERROR;
+  }
+
+  *latency = r_usec * S_PER_USEC * stm->sample_spec.rate;
+  return CUBEB_OK;
+}
+
 static struct cubeb_ops const pulse_ops = {
   .init = pulse_init,
   .get_backend_id = pulse_get_backend_id,
@@ -577,5 +601,6 @@ static struct cubeb_ops const pulse_ops 
